#!/bin/bash

SCRIPT_DIR="$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"

command_error() {
    echo "Usage: $ server (run)"
}

if [ $# -ne 1 ]; then
    command_error
    exit 1
fi

# Parse argument

case $1 in 
    "run")
    flask --app ${SCRIPT_DIR}/../web_server/web_server --debug run --host 0.0.0.0 --port 9001
    ;;

    *)
    command_error
    exit 1
    ;;
esac